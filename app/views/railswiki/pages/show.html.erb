<p id="notice"><%= notice %></p>

<h1><%= @page.title %>
  <small>
    <% if @page.builtin_page? %>
      <%= link_to 'Edit', new_page_path(title: @page.title) if user_can?(:create_page) %>
    <% else %>
      <%= link_to 'History', page_history_path(@page) if user_can?(:history_page) %>
      <%= link_to 'Edit', edit_page_path(@page) if user_can?(:edit_page) %>
      <%= link_to ".json", wiki_path(@page, format: :json) %>
    <% end %>
  </small>
</h1>

<%= content_tag "div", class: "wiki-content wiki-#{classify_title(@page.title)}" do %>
  <%= raw markdown.render @page.content %>
<% end %>

<p>
  <strong>Edited</strong>
  <% if @page.latest_version %>
    <%= time_ago @page.latest_version.created_at %>
  <% else %>
    <i>never!</i>
  <% end %>
  <% if user_can?(:see_page_author) %>
    <strong>by</strong>
    <% if @page.author %>
      <%= link_to @page.author.name, @page.author %>
    <% else %>
      <i>nobody!</i>
    <% end %>
  <% end %>
</p>
